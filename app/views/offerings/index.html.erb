<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
   
   <div class="form-inline">
   <center>
   <label >Year</label>
    
    <%= f.select(
      :with_year,
      @filterrific.select_options[:with_year],
      { include_hidden: false, include_blank: '- Any -' }, { multiple: true, style:  "width:100px",  class: "form-control"}
    ) %>
    <label >Dept</label>
    
    <%= f.select(
      :with_course_code_prefix,
      @filterrific.select_options[:with_course_code_prefix],
      { include_hidden: false, include_blank: '- Any -' }, { multiple: true, style:  "width:100px",  class: "form-control"}
    ) %>
    <label >Course</label>
    
    <%= f.select(
      :with_course_code_suffix,
      @filterrific.select_options[:with_course_code_suffix],
      { include_hidden: false, include_blank: '- Any -' }, { multiple: true, style:  "width:100px",  class: "form-control"}
    ) %>
    <label >Instructor</label>
    
    <%= f.select(
      :with_fname_and_lname,
      @filterrific.select_options[:with_fname_and_lname],
      { include_hidden: false, include_blank: '- Any -' }, { multiple: true, style:  "width:200px",  class: "form-control"}

    ) %>
  
       </center>
  
       <div style="margin-top:10px"></div>

       <div class="form-inline">
        <center>
    
    
    
            <%# add an automated spinner to your form when the list is refreshed %>
            <%= render_filterrific_spinner %>
                <%= f.submit 'Filter', class: 'btn btn-success'  %>
            <% end %>
            
            
        
            <%= link_to(
            'Reset filters',  
            reset_filterrific_url, :class =>"btn btn-danger btn-xl"
            ) %>
        


        </center>
      </div>
    </div>
 </div>
<div style="margin-top:5px"></div>

<%= render(
  partial: 'offerings/list',
  locals: { offerings: @offerings }
) %>

