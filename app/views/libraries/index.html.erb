<div class="panel panel-default">
  <!-- Default panel contents -->
  <h2><span class="label label-primary">Library Index</span></h2>
  
 <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#libraryAdd">Add Library</button>

 <div id="libraryAdd" class="collapse">

  <%= form_for Library.new, class: 'form-inline'   do |f| %>
  <%= f.label :offering_id  %>
  <%= f.text_field :offering_id,  {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :document_id %>
  <%= f.text_field :document_id , {class: "form-control" , style:  "width:350px"} %>
  <div style="margin-top:10px" > </div>
  <%= f.submit :Submit, class: 'btn btn-success'  %>
  <% end %>
 </div> 
  <!-- Table for degrees -->
  <table class="table"  >
   
    <thead>
      <tr>
        <th><%= "Course: "%></th>
        <th><%= "Section: "%></th>
        <th><%= "Document: "%></th>
      </tr>
    </thead>
    
    <tbody>
    <% @libraries.each do |library| %>
      <tr>
          <td><%= library.offering.course.name %></td>
          <td><%= library.offering.section %></td>
          <td><%= library.document.name %></td>
        <td> <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>  <%= link_to 'Details', library_path(library) %></td>
      </tr>
   <% end %>
  
    </tbody>
    
  </table>
  
  <%= link_to "<button type='button' class='btn btn-default'> Admin Page </button>".html_safe , sys_admin_index_path %>

  
</div>
