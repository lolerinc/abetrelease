<div class="panel panel-default">
  <!-- Default panel contents -->
  <h2><span class="label label-primary">Teaching Index</span></h2>
  
 <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#teachingAdd">Add Teaching</button>

 <div id="teachingAdd" class="collapse">

  <%= form_for Teaching.new, class: 'form-inline'   do |f| %>
  <%= f.label :user_id  %>
  <%= f.text_field :user_id ,  {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :offering_id %>
  <%= f.text_field :offering_id , {class: "form-control" , style:  "width:350px"} %>
  <div style="margin-top:10px" > </div>
  <%= f.submit :Submit, class: 'btn btn-success'  %>
  <% end %>
 </div> 
  <!-- Table for degrees -->
  <table class="table"  >
   
    <thead>
      <tr>
        <th><%= "Instructor: "%></th>
        <th><%= "Course Name: "%></th>
        <th><%= "CRN: "%></th>
      </tr>
    </thead>
    
    <tbody>
    <% @teachings.each do |teaching| %>
      <tr>
        <td><%= teaching.user.fname %><%= " " %><%= teaching.user.lname %></td>
        <td><%= teaching.offering.course.name %></td>
        <td><%= teaching.offering.CRN %></td>
        <td> <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>  <%= link_to 'Details', teaching_path(teaching)%></td>
      </tr>
   <% end %>
  
    </tbody>
    
  </table>
      <%= link_to "<button type='button' class='btn btn-default'> Admin Page </button>".html_safe , sys_admin_index_path %>

</div>

