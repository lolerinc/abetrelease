    <%= f.text_field :rscore , {class: "form-control" , style:  "width:30%"} %>
  </div>
  <div class="field">
    <b>Calculation of results</b><br>
    <%= f.text_area :calculation , {class: "form-control" , style:  "width:50%; height:100px;"}  %>
  </div>
