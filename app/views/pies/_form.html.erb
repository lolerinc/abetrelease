  <div class="field">
    <b>Performance indicator</b><br>
    <%= f.text_area :name , {class: "form-control" , style:  "width:50%; height:100px;"}  %>
  </div>
  <div class="field">
    <b>ABET outcome</b><br>
    <%= f.text_field :abet_outcome , {class: "form-control" , style:  "width:30%"} %>
