    <%= f.text_area :evaluation , {class: "form-control" , style:  "width:50%; height: 100px;"}  %>
  </div>
  <div class="field">
    <b>Comments about course outcomes</b><br>
    <%= f.text_area :comment_outcomes , {class: "form-control" , style:  "width:50%; height:100px;"}  %>
