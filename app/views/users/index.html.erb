<div class="panel panel-default">
  <!-- Default panel contents -->
  
  <h2><span class="label label-primary">Users Index</span></h2>
  
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#userAdd">Add User</button>
  <div id="userAdd" class="collapse">

 
  
  <%= form_for  User.new, class: 'form-inline'  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name , {class: "form-control" , style:  "width:350px"}  %>
  <%= f.label :password %>
  <%= f.text_field :password , {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :fname %>
  <%= f.text_field :fname , {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :lname %>
  <%= f.text_field :lname , {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :email %>
  <%= f.text_field :email , {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :permission %>
  <%= f.text_field :permission , {class: "form-control" , style:  "width:350px"} %>
  <div style="margin-top:10px" > </div>
  <%= f.submit :Submit, class: 'btn btn-success'  %>
  <% end %>   
  </div>
  <!-- Table for degrees -->
  <table class="table"  >
   
    <thead>
      <tr>
        <th><%= "Degree: "%></th>
      </tr>
    </thead>
    
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.permission %></td>
        <td> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>  <%= link_to 'Details', user_path(user)%></td>
      </tr>
   <% end %>
  
    </tbody>
    
  </table>
  
      <%= link_to "<button type='button' class='btn btn-default'> Admin Page </button>".html_safe , sys_admin_index_path %>

  
</div>

