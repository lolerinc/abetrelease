<center>
<h1><span class="label label-primary">Editing Document</span></h1>
</center>  
  <%= form_for @document, class: 'form-inline'   do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name,  {class: "form-control", 
                            style:  "width:350px"} %>
  <%= f.label :status %>
  <%= f.select :status, 
                options_for_select(["Not Submitted",
                "Not Reviewed", "Revisions Required", 
                "Approved - Complete"]) %>
  <div class="form-group" id="post_date_time">
    <%= f.label :assigned  %>
    <div class='input-group date' >
    <%= f.text_field :assigned,  {class: "form-control datetimepicker",
                                style:  "width:350px"} %>
    </div>
  </div>
  <div class="form-group" id="post_date_time">
    <%= f.label :due  %>
    <div class='input-group date' >
    <%= f.text_field :due,  {class: "form-control datetimepicker", 
                            style:  "width:350px"} %>
    </div>
  </div>
  <%= f.label "Form type:"  %>
  <%= f.select :formType, 
                options_for_select(["EOCM", "PIE", "AIR"]) %>
  <div style="margin-top:10px" > </div>
  <%= f.submit :Submit, class: 'btn btn-success'  %>
  <% end %> 
  </div>


  <center>
  <%= link_to "<button type='button' class='btn btn-danger'> Cancel </button>".html_safe , '/browse/index'%>
  </center>

<script type="text/javascript">
  $(function () {
    $('.datetimepicker').datetimepicker({defaultDate: "<%= @document.assigned %>", format: "YYYY-MM-DD hh:mm a "
    });
  });
</script>
