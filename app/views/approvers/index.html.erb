<div class="panel panel-default">
  <!-- Default panel contents -->
  <h2><span class="label label-primary">Approver Index</span></h2>
  
 <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#approverAdd">Add Approver</button>

 <div id="approverAdd" class="collapse">

  <%= form_for Approver.new, class: 'form-inline'   do |f| %>
  <%= f.label :user_id  %>
  <%= f.text_field :user_id,  {class: "form-control" , style:  "width:350px"} %>
  <%= f.label :track_id %>
  <%= f.text_field :track_id , {class: "form-control" , style:  "width:350px"} %>
  <div style="margin-top:10px" > </div>
  <%= f.submit :Submit, class: 'btn btn-success'  %>
  <% end %>
 </div> 
  <!-- Table for degrees -->
  <table class="table"  >
   
    <thead>
      <tr>
        <th><%= "User: "%></th>
        <th><%= "Track: "%></th>
      </tr>
    </thead>
    
    <tbody>
    <% @approvers.each do |approver| %>
      <tr>
          <td><%= approver.user.fname %><%= " " %><%= approver.user.lname %></td>
          <td><%= approver.track.name %></td>
        <td> <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>  <%= link_to 'Details', approver_path(approver) %></td>
      </tr>
   <% end %>
  
    </tbody>
    
  </table>
  
  <%= link_to "<button type='button' class='btn btn-default'> Admin Page </button>".html_safe , sys_admin_index_path %>

  
</div>